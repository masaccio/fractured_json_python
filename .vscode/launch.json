{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Debug Current File",
            "type": "debugpy",
            "request": "launch",
            "program": "${file}",
            "console": "integratedTerminal",
            "env": {
                "PYDEVD_DISABLE_FILE_VALIDATION": "1",
                "PYTHONNET_RUNTIME": "coreclr",
                "PYTEST_ADDOPTS": "--no-cov",
            },
            "justMyCode": true
        },
        {
            "name": "Debug Build Script",
            "type": "debugpy",
            "request": "launch",
            "program": "src/build/build_binaries.py",
            "console": "integratedTerminal",
            "env": {
                "PYDEVD_DISABLE_FILE_VALIDATION": "1",
                "PYTHONNET_RUNTIME": "coreclr",
                "PYTEST_ADDOPTS": "--no-cov",
            },
            "justMyCode": true
        },
        {
            "name": "Debug CLI",
            "type": "debugpy",
            "request": "launch",
            "program": "src/fractured_json/_fractured_json.py",
            "console": "integratedTerminal",
            "env": {
                "PYDEVD_DISABLE_FILE_VALIDATION": "1",
                "PYTEST_ADDOPTS": "--no-cov",
                "PYTHONNET_RUNTIME": "coreclr",
            },
            "justMyCode": true,
            "args": [
                "--help",
            ]
        },
        {
            "name": "Debug pytest with test file",
            "type": "debugpy",
            "request": "launch",
            "module": "pytest",
            "args": [
                "tests/test_formatter.py",
                "--test-file=tests/data/test-fj-issue-36.ref-1.json",
                "--test-verbose"
            ],
            "console": "integratedTerminal",
            "justMyCode": true
        }
    ]
}